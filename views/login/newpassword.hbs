{{!-- css styling start --}}
<style>
  * {
    margin: 0px;
    padding: 0px;
    box-sizing: border-box;
  }

  body {
    height: 100vh;
    width: 100%;
    font-size: 17px;
    background: url(/img/photo.jpg);
    background-size: cover;
    overflow: hidden;
  }

  .row {
    text-align: -webkit-center;
  }

  fieldset {
    color: rgba(252, 248, 248, 0.938);
  }

  input {
    outline: none;
  }

  legend {
    font-size: 22px;
    color: rgba(253, 246, 246, 0.945);
  }

  .form-group input,
  .signin {
    display: block;
    width: 85%;
    margin: auto;
    margin-top: 29px;
    font-size: 15px;
    padding: 10px;
    outline: none;
  }

  .form-group a {
    text-decoration: none;
    color: rgba(44, 134, 236, 0.904);
  }

  .form-group a:hover {
    color: rgb(7, 103, 247);
    text-decoration: underline;
  }

  .user-details {
    padding: 15px;
    background: rgba(15, 15, 15, 0.747);
  }

  .button {
    display: inline-block;
    width: 130px;
    height: 40px;
    margin: 20px 18px;
    font-size: 16px;
    padding: 4px;
    background: rgba(245, 244, 244, 0.815);
  }

  .button:hover {
    background: rgba(196, 194, 194, 0.815);
  }

  .forgot-password {
    display: flex;
    margin-left: 40px;
  }
</style>
{{!-- css styling end --}}

{{!-- header start --}}
<nav class="navbar navbar-expand-sm bg-dark navbar-dark nav justify-content-end">
  <ul class="nav mx-4">
    <li class="nav-item">
      <a class="nav-link text-light" href="#"><i class="fa fa-fw fa-home"></i>Home</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-light" href="http://localhost:8000/register"><i
          class="fa fa-fw fa-user-plus"></i>Registration</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-light" href="http://localhost:8000/login"><i class="fa fa-fw fa-user"></i>Login</a>
    </li>
  </ul>
</nav>
{{!-- header end --}}

<form action="" method="POST">
  <div class="row">
    <fieldset class="form mt-4">
      <legend>
        <h2>Change your password</h2>
      </legend>
      <div class="user-details center col-lg-6">

         <div class="form-group">
          <input type="password" name="password" class="form-control" id="password" placeholder="New Password" required />
        </div>

         <div class="form-group">
          <input type="password" name="cpassword" class="form-control" id="cpassword" placeholder="Confirm Password" required />
        </div>

        <div class="m-3">
          <input type="submit" value="Reset password" class="button">
          <div class="d-flex flex-row mx-4 p-2 text-info">{{this.error}}</div>
          <div class="d-flex flex-row mx-4 p-2 text-info">{{success}}</div>
        </div>
      </div>

      <div class="form-group login mt-3">
        <p> <a href="http://localhost:8000/login">Go to Login Page</a></p>
      </div>
    </fieldset>
  </div>
</form>