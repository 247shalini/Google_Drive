{{!-- css styling start --}}
<style>
  * {
    margin: 0px;
    padding: 0px;
    box-sizing: border-box;
  }

  body {
    height: 100vh;
    width: 100%;
    font-size: 17px;
    background: url(../img/photo.jpg);
    background-size: cover;
    /* overflow: hidden; */
  }

  .row {
    text-align: -webkit-center;
  }

  fieldset {
    color: rgba(252, 248, 248, 0.938);
  }

  input {
    outline: none;
  }

  legend {
    font-size: 22px;
    color: rgba(236, 236, 236, 0.945);
  }

  .form-group input,
  .signin {
    display: block;
    width: 90%;
    margin: auto;
    margin-top: 20px;
    font-size: 15px;
    padding: 8px;
    outline: none;
  }

  .user-details {
    padding: 15px;
    background: rgba(15, 15, 15, 0.747);
  }

  .button {
    display: inline-block;
    width: 100px;
    height: 40px;
    margin: 20px 18px;
    font-size: 14px;
    padding: 5px;
    background: rgba(245, 244, 244, 0.815);
  }

  .signin {
    padding: 0px;
  }

  .button:hover {
    background: rgba(196, 194, 194, 0.815);
  }

  .form-group a {
    text-decoration: none;
    color: rgba(44, 134, 236, 0.904);
  }

  .form-group a:hover {
    color: rgb(7, 103, 247);
    text-decoration: underline;
  }
</style>
{{!-- css styling end --}}


{{!-- header start --}}
<nav class="navbar navbar-expand-sm bg-dark navbar-dark nav justify-content-end">
  <ul class="nav mx-4">
    <li class="nav-item">
      <a class="nav-link text-light" href="#"><i class="fa fa-fw fa-home"></i>Home</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-light" href="http://localhost:8000/register"><i
          class="fa fa-fw fa-user-plus"></i>Registration</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-light" href="http://localhost:8000/login"><i class="fa fa-fw fa-user"></i>Login</a>
    </li>
  </ul>
</nav>
{{!-- header end --}}

{{!-- form section start --}}
<form action="/register" method="POST">
  <div class="row mx-auto">
    <fieldset class="form mt-3">
      <legend>
        <h2>Registration Form</h2>
      </legend>
      <div class="user-details center col-lg-6">
        <div class="form-group">
          <input type="text" name="firstname" id="firstname" placeholder="First Name" />
          <div class="d-flex flex-row mx-4 p-2 text-info">{{this.errors.firstname}}</div>
        </div>

        <div class="form-group">
          <input type="text" name="lastname" id="lastname" placeholder="Last Name" />
          <div class="d-flex flex-row mx-4 p-2 text-info">{{this.errors.lastname}}</div>
        </div>

        <div class="form-group">
          <input type="email" name="email" class="form-control" id="email" placeholder="Email" />
          <div class="d-flex flex-row mx-4 p-2 text-info">{{this.errors.email}}</div>
        </div>

        <div class="form-group">
          <input type="password" name="password" class="form-control" id="password" placeholder="Password" />
          <div class="d-flex flex-row mx-4 p-2 text-info">{{this.errors.password}}</div>
        </div>

        <div class="m-3">
          <input type="submit" value="Register" class="button">
          <input type="reset" value="Reset" class="button">
        </div>
      </div>

      <div class="form-group signin">
        <p>Already have an account? <a href="http://localhost:8000/login">Sign in</a></p>
      </div>

    </fieldset>
  </div>
</form>
{{!-- form section end --}}